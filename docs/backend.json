  "templates": {
    "labour_unlawful_termination": {
      "documentTitle": "Statement of Claim for Unlawful Termination",
      "partyTitles": {
        "applicant": "Employee / Applicant (አመልካች/ሰራተኛ)",
        "respondent": "Employer / Organization (ተጠሪ/ቀጣሪ)"
      },
      "jurisdictionText": "Labour Proclamation No. 1156/2019",
      "facts": {
        "group_1": {
          "title": "The Contractual Relationship (Prerequisites)",
          "facets": [
            {
              "id": "indefinite_contract",
              "legalText": "Existence of an indefinite period employment contract.",
              "citation": "Art. 4 & 9",
              "evidence": ["EmploymentContract"]
            },
            {
              "id": "definite_contract_ended",
              "legalText": "Existence of definite period (probationary) contract (and specific claim that probation ended).",
              "citation": "Art. 11",
              "evidence": ["EmploymentContract"]
            }
          ]
        },
        "group_2": {
          "title": "The Act of Termination (The Breach)",
          "facets": [
            {
              "id": "no_prior_notice",
              "legalText": "Termination was effected without any prior notice.",
              "citation": "Violation of Art. 35",
              "evidence": ["TerminationLetter"]
            },
            {
              "id": "insufficient_notice",
              "legalText": "Termination notice period was insufficient (less than legal minimum based on service years).",
              "citation": "Violation of Art. 35",
              "evidence": ["TerminationLetter"]
            },
            {
              "id": "union_membership",
              "legalText": "Termination due to Employee joining a Trade Union.",
              "citation": "Art. 26",
              "evidence": []
            },
            {
              "id": "pregnancy_maternity",
              "legalText": "Termination due to pregnancy or maternity leave status.",
              "citation": "Art. 26",
              "evidence": []
            },
            {
              "id": "discrimination",
              "legalText": "Termination due to race, color, sex, religion, or political opinion (Discrimination).",
              "citation": "Art. 26",
              "evidence": []
            },
            {
              "id": "no_valid_reason",
              "legalText": "The Employer provided no valid reason for termination as required by Art. 27.",
              "citation": "Art. 27",
              "evidence": []
            },
            {
              "id": "constructive_dismissal",
              "legalText": "Employee was forced to resign due to Employer's unlawful actions (sexual harassment or danger to safety).",
              "citation": "Art. 32",
              "evidence": []
            }
          ]
        }
      },
      "reliefs": [
        {
          "id": "declare_unlawful",
          "text": "Judgment declaring the termination unlawful pursuant to Art. 43."
        },
        {
          "id": "reinstatement",
          "text": "Order for reinstatement to previous position with full back pay (Art. 48)."
        },
        {
          "id": "compensation",
          "text": "Payment of compensation (usually 180 days wages) in lieu of reinstatement (Art. 43(4))."
        },
        {
          "id": "severance_pay",
          "text": "Payment of Severance Pay (Art. 39 & 40) - Logic: Only if not reinstated."
        },
        {
          "id": "notice_compensation",
          "text": "Payment of Compensation for lack of Notice (Art. 44)."
        }
      ]
    },
    "labour_unpaid_wages": {
      "documentTitle": "Statement of Claim for Outstanding Payments",
      "partyTitles": {
        "applicant": "Employee / Applicant (አመልካች/ሰራተኛ)",
        "respondent": "Employer / Organization (ተጠሪ/ቀጣሪ)"
