      "facts": {
        "group_1": {
          "title": "Salary Arrears",
          "facets": [
            {
              "id": "non_payment_salary",
              "legalText": "Non-payment of regular monthly salary for specific months.",
              "citation": "Art. 53",
              "evidence": ["PayrollSlip"]
            },
            {
              "id": "unlawful_deduction",
              "legalText": "Unlawful deduction from salary (without employee consent or court order).",
              "citation": "Art. 59",
              "evidence": ["PayrollSlip"]
            }
          ]
        },
        "group_2": {
          "title": "Statutory Benefits",
          "facets": [
            {
              "id": "overtime_work",
              "legalText": "Employee worked beyond 8 hours/day or 48 hours/week without overtime compensation.",
              "citation": "Art. 66 & 68",
              "evidence": ["AttendanceSheet"]
            },
            {
              "id": "annual_leave",
              "legalText": "Employee was denied annual leave and not compensated for it upon termination.",
              "citation": "Art. 77 & 79",
              "evidence": []
            },
            {
              "id": "public_holiday_work",
              "legalText": "Worked on public holidays without legally mandated compensation.",
              "citation": "",
              "evidence": []
            }
          ]
        }
      },
      "reliefs": [
        {
          "id": "pay_principal",
          "text": "Order Respondent to pay the total principal amount calculated."
        },
        {
          "id": "statutory_interest",
          "text": "Statutory interest on the delayed payments."
        },
        {
          "id": "pay_overtime",
          "text": "Payment of specific calculated overtime."
        }
      ]
    },
    "labour_employment_injury": {
