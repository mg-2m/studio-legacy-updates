            {
                "id": "grant_salary_increment",
                "text": "To order the payment of the denied salary increment, with retroactive effect."
            },
            {
                "id": "refund_deductions",
                "text": "To order the refund of any unlawfully deducted salary."
            }
        ]
    }
  }
