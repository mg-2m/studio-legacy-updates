
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Disallow all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to READ data from the legal modules.
    // This is a secure default for a public-facing legal guidance tool.
    // Writes should be handled by trusted server-side processes or admin roles.
    match /family_law/{document=**} {
      allow read: if request.auth != null;
    }

    match /contract_law/{document=**} {
      allow read: if request.auth != null;
    }

    match /property_law/{document=**} {
      allow read: if request.auth != null;
    }
  }
}
